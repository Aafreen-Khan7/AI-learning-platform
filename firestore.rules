rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all authenticated users to read and write everything
    // This is a temporary permissive rule to get the dashboard working
    // In production, you should restrict this to specific user permissions
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
